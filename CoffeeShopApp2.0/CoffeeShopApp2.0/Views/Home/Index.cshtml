@model CoffeeShopApp2._0.Models.WeeklyForecast

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to My Coffee Shop!!</h1>
    <h2>The Coffee that makes you more awake....</h2>
    <h3>(unless it's an Irish coffee, and in that case have more!)</h3>
    <a href="/Home/Account/Register" style="display:block;">Register</a>
</div>

<form action="/Home/Index" method="get">
    <input type="text" name="lat" placeholder="Latitude" />
    <input type="text" name="lon" placeholder="Longitude" />
    <input type="hidden" name="FcstType" value="json" />
    <input type="submit" name="Submit" value="Submit" />
</form>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time.StartPeriodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.Temperature)
            </th>
        </tr>
        @*use a for loop to go through the list*@
        @foreach (var item in Model.Time.StartPeriodName)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item)
                </td>
            </tr>
        }

        @foreach (var item in Model.Data.Temperature)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item)

                </td>
            </tr>
        }
    </table>
}


<div class="row">
    <div class="col-md-4">

    </div>
</div>